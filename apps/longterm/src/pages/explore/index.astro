---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import ContentHub from '../../components/ContentHub';
---

<StarlightPage
  frontmatter={{
    title: 'Explore',
    description: 'Search and browse all wiki pages, comparison tables, and cause-effect diagrams',
    tableOfContents: false,
    template: 'splash',
  }}
  headings={[]}
>
  <div class="explore-page">
    <ContentHub client:load />
  </div>
</StarlightPage>

<style>
  .explore-page {
    min-height: 60vh;
  }
</style>

<style is:global>
  /* Make explore page full-width */
  .content-panel,
  .content-panel > *,
  main,
  .main-frame,
  .sl-container,
  .main-pane {
    max-width: 100% !important;
    width: 100% !important;
  }

  .sl-container {
    padding-inline: 2rem !important;
  }

  .content-panel article {
    max-width: 100% !important;
  }

  /* Smaller title, no underline */
  .content-panel h1#_top {
    font-size: 1.5rem !important;
    border-bottom: none !important;
    padding-bottom: 0 !important;
    margin-bottom: 0.5rem !important;
  }

  /* Remove any separator lines between panels */
  .content-panel {
    border: none !important;
    box-shadow: none !important;
  }

  .content-panel + .content-panel {
    border-top: none !important;
    margin-top: 0 !important;
    padding-top: 0.5rem !important;
  }
</style>
