---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import ContentHub from '../../components/ContentHub';
---

<StarlightPage
  frontmatter={{
    title: 'Explore Content',
    description: 'Search and browse all wiki pages, comparison tables, and cause-effect diagrams in one place',
    tableOfContents: false,
    template: 'splash',
  }}
  headings={[]}
>
  <div class="explore-page">
    <p class="intro-text">
      Search and filter across all content types. Use the type buttons to narrow down to wiki pages, tables, or diagrams,
      then filter by category or search by keyword.
    </p>

    <ContentHub client:load />
  </div>
</StarlightPage>

<style>
  .explore-page {
    margin-top: 0;
  }

  .intro-text {
    color: var(--sl-color-gray-3);
    margin-bottom: 1.5rem;
    max-width: 65ch;
  }
</style>

<style is:global>
  /* Make explore page full-width - override all Starlight constraints */
  .content-panel,
  .content-panel > *,
  main,
  .main-frame,
  .sl-container,
  .main-pane {
    max-width: 100% !important;
    width: 100% !important;
  }

  .sl-container {
    padding-inline: 2rem !important;
  }

  /* Remove the max-width constraint on the content wrapper */
  .content-panel article {
    max-width: 100% !important;
  }
</style>
