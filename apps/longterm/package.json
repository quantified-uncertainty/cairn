{
  "name": "longterm",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "node scripts/build-data.mjs && astro dev",
    "start": "node scripts/build-data.mjs && astro dev",
    "build": "node scripts/build-data.mjs && astro build",
    "build:data": "node scripts/build-data.mjs",
    "preview": "astro preview",
    "astro": "astro",
    "clean": "rm -rf .astro dist",
    "dev:clean": "npm run clean && npm run dev",
    "prepare": "sh scripts/setup-hooks.sh",

    "crux": "node scripts/crux.mjs",
    "validate": "node scripts/crux.mjs validate",
    "analyze": "node scripts/crux.mjs analyze",
    "fix": "node scripts/crux.mjs fix",
    "content": "node scripts/crux.mjs content",
    "generate": "node scripts/crux.mjs generate",
    "resources": "node scripts/crux.mjs resources",
    "insights": "node scripts/crux.mjs insights",
    "gaps": "node scripts/crux.mjs gaps",

    "precommit": "node scripts/crux.mjs validate unified --rules=frontmatter-schema,dollar-signs,comparison-operators,tilde-dollar,markdown-lists,consecutive-bold-labels,prefer-entitylink && node scripts/crux.mjs validate sidebar && node scripts/crux.mjs validate compile --quick",
    "precommit:full": "node scripts/crux.mjs validate unified --rules=frontmatter-schema,dollar-signs,comparison-operators,tilde-dollar,markdown-lists,consecutive-bold-labels,prefer-entitylink && node scripts/crux.mjs validate compile && node scripts/crux.mjs validate refs && npx astro check",
    "validate:ci": "node scripts/crux.mjs validate all --ci --skip=component-refs,entitylink-ids",

    "extract": "node scripts/extract/extract-data.mjs",
    "extract-insights": "node scripts/extract/extract-insights.mjs",
    "forecasts:refresh": "node scripts/metaforecast/discover-page-forecasts.mjs && node scripts/metaforecast/update-tracked-forecasts.mjs",

    "test": "node scripts/lib/lib.test.mjs && node scripts/lib/validators.test.mjs",
    "lint": "eslint src scripts --ext .ts,.tsx,.mjs",
    "lint:fix": "eslint src scripts --ext .ts,.tsx,.mjs --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,astro}\" \"scripts/**/*.mjs\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,astro}\" \"scripts/**/*.mjs\""
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^2.1.23",
    "@anthropic-ai/sdk": "^0.71.2",
    "@astrojs/react": "^4.4.2",
    "@astrojs/starlight": "^0.37.4",
    "@cairn/starlight": "workspace:*",
    "@cairn/ui": "workspace:*",
    "@dagrejs/dagre": "^1.1.8",
    "@iconify-json/lucide": "^1.2.87",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-table": "^8.21.3",
    "@xyflow/react": "^12.10.0",
    "astro": "^5.16.15",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "elkjs": "^0.11.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.1",
    "lucide-react": "^0.562.0",
    "mermaid": "^11.12.2",
    "react": "^19.2.4",
    "react-data-table-component": "^7.7.0",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "yaml": "^2.8.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@mdx-js/mdx": "^3.0.1",
    "@mendable/firecrawl-js": "^4.11.5",
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "cheerio": "^1.2.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "pdf-parse": "^1.1.4",
    "playwright": "^1.58.0",
    "prettier": "^3.8.1",
    "remark-frontmatter": "^5.0.0",
    "remark-mdx-frontmatter": "^4.0.0",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript-eslint": "^8.54.0"
  }
}
